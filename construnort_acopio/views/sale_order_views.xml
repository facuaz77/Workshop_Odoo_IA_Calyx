<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista heredada de sale.order para agregar el botón de Acopio -->
        <record id="view_order_form_inherit_acopio" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.acopio</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Agregar el botón en el header -->
                <xpath expr="//header" position="inside">
                    <button name="%(construnort_acopio.action_construnort_acopio_wizard)d"
                            string="Acopio"
                            type="action"
                            class="oe_highlight"
                            groups="construnort_acopio.group_construct_acopio"/>
                </xpath>
                
                <!-- Asegurar que el estado 'acopio' aparezca en el statusbar -->
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">draft,sent,sale,acopio,done</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
