<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista formulario del wizard -->
        <record id="view_construnort_acopio_wizard_form" model="ir.ui.view">
            <field name="name">construnort.acopio.wizard.form</field>
            <field name="model">construnort.acopio.wizard</field>
            <field name="arch" type="xml">
                <form string="Wizard de Acopio">
                    <group>
                        <field name="check_process"/>
                    </group>
                    <footer>
                        <button name="action_confirm_acopio"
                                string="Confirmar"
                                type="object"
                                class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- AcciÃ³n para abrir el wizard -->
        <record id="action_construnort_acopio_wizard" model="ir.actions.act_window">
            <field name="name">Acopio</field>
            <field name="res_model">construnort.acopio.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
        </record>
    </data>
</odoo>
